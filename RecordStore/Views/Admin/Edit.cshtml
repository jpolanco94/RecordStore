@model Product
@{ 
    ViewBag.Totle = "Edit Product";
    Layout = "_AdminLayout";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Artist"></label>
        <div><span asp-validation-for="Artist" class="text-danger"></span></div>
        <input asp-for="Artist" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Genre"></label>
        <div><span asp-validation-for="Genre" class="text-danger"></span></div>
        <input asp-for="Genre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-aaction="Index" class="btn btn-secondary">Abort!</a>
    </div>
</form>